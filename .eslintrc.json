{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:prettier/recommended",
    "next/core-web-vitals"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "Window": "readonly"
  },
  "rules": {
    "indent": ["error", 2],
    "no-empty": "warn",
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^Window$" }
    ],
    "no-cond-assign": ["error", "always"],
    "prettier/prettier": [
      "error",
      {
        "useTabs": false,
        "tabWidth": 2,
        "endOfLine": "auto"
      }
    ]
  }
}
